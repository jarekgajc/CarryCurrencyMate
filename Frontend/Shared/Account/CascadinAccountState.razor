@inject HttpClient HttpClient;

@if(_account != null)
{
    <CascadingValue Value="_account">
        @ChildContent
    </CascadingValue>
}

@code {
    private Account? _account;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [CascadingParameter]
    private LoadRequest? LoadRequest { get; set; }

    protected override async Task OnInitializedAsync()
    {
        HttpResponseMessage? response = await LoadRequest!(() => HttpClient.GetAsync($"{Env.Backend}/api/accounts/user"));
        if (response == null)
            return;

        _account = await response.Content.ReadFromJsonAsync<Account>();
    }
}
